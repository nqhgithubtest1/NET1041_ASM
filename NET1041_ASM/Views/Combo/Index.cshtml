@model ComboFilterViewModel

<!-- Menu Start -->
<div class="menu">
    <div class="container">
        <div class="section-header text-center mb-5">
            <p>Combo Menu</p>
            <h2>Delicious Combo Menu</h2>
        </div>
        <div class="menu-tab">
            <ul class="nav nav-pills justify-content-center mb-4">
                <div class="filter-form p-4 mb-4 shadow-sm rounded">
                    <form method="get" asp-action="Index">
                        <div class="form-row mb-3">
                            <div class="col-md-4">
                                <input type="text" name="Keyword" class="form-control" placeholder="Search..." value="@Model.Keyword" />
                            </div>
                            <div class="col-md-4">
                                <input type="number" name="PriceFrom" class="form-control" placeholder="Price From" value="@Model.PriceFrom" />
                            </div>
                            <div class="col-md-4">
                                <input type="number" name="PriceTo" class="form-control" placeholder="Price To" value="@Model.PriceTo" />
                            </div>
                        </div>

                        <div class="form-row mb-3">
                            <div class="col-md-6">
                                <label for="SortBy" class="form-label">Sort by:</label>
                                @Html.DropDownList("SortBy", (IEnumerable<SelectListItem>)ViewBag.SortByOptions, "Select attribute to sort by", new { @class = "form-control", @id = "SortBy" })
                            </div>
                            <div class="col-md-6">
                                <label for="SortOrder" class="form-label">Order:</label>
                                @Html.DropDownList("SortOrder", (IEnumerable<SelectListItem>)ViewBag.SortOrderOptions, "Select order", new { @class = "form-control", @id = "SortOrder" })
                            </div>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-success px-4">Filter</button>
                            <a asp-action="Index" type="submit" class="btn btn-secondary">Clear</a>
                        </div>
                    </form>
                </div>
            </ul>
            <div class="tab-content d-flex justify-content-center">
                <div id="burgers" class="container tab-pane active">
                    <div class="row justify-content-center">
                        <div class="col-lg-8 col-md-12">
                            @foreach (var food in Model.Combos)
                            {
                                <a href="@Url.Action("Detail", "Combo", new { id = food.ComboID })" class="text-decoration-none text-dark">
                                    <div class="menu-item d-flex align-items-center mb-4 p-3 shadow-sm rounded bg-white">
                                        <div class="menu-img mr-3">
                                            <img src="@food.ImagePath" alt="Image" class="img-fluid rounded-circle" style="width: 80px; height: 80px;">
                                        </div>
                                        <div class="menu-text flex-grow-1">
                                            <h3 class="d-flex justify-content-between">
                                                <span>@food.Name</span>
                                                <strong class="text-success">@food.Price.ToString("N0") VND</strong>
                                            </h3>
                                            <p class="text-muted">@food.Description</p>
                                        </div>
                                    </div>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Menu End -->
<!-- Pagination -->
@if (ViewBag.TotalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", "Combo", new { page = i, Model.Keyword, Model.PriceFrom, Model.PriceTo, Model.SortBy, Model.SortOrder })">
                        @i
                    </a>
                </li>
            }
        </ul>
    </nav>
}

<!-- Custom CSS -->
<style>
    .category-filter .btn {
        margin: 5px;
    }

        .category-filter .btn.active {
            background-color: #28a745;
            color: white;
            border-color: #28a745;
        }

    .filter-form {
        background-color: #f8f9fa;
        border: 1px solid #dee2e6;
        border-radius: 8px;
    }

        .filter-form input,
        .filter-form .form-control {
            border-radius: 5px;
            border: 1px solid #ced4da;
        }

        .filter-form .form-label {
            font-weight: bold;
            color: #6c757d;
        }

        .filter-form .btn-success {
            background-color: #28a745;
            border-color: #28a745;
            font-weight: bold;
        }

            .filter-form .btn-success:hover {
                background-color: #218838;
                border-color: #1e7e34;
            }

        .filter-form .text-center {
            margin-top: 10px;
        }

    .pagination {
        margin-top: 20px;
    }

        .pagination .page-item {
            margin: 0 5px;
        }

        .pagination .page-link {
            color: #28a745;
            background-color: #fff;
            border: 1px solid #dee2e6;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
        }

            .pagination .page-link:hover {
                color: #fff;
                background-color: #28a745;
                border-color: #28a745;
            }

        .pagination .page-item.active .page-link {
            color: #fff;
            background-color: #28a745;
            border-color: #28a745;
        }

    .menu-tab .nav-link {
        background-color: #f8f9fa;
        color: #6c757d;
        border: 1px solid #dee2e6;
        margin-right: 5px;
        border-radius: 20px;
    }

        .menu-tab .nav-link.active {
            background-color: #28a745;
            color: #fff;
        }

    .menu-item {
        border-bottom: 1px dashed #e9ecef;
    }

        .menu-item:last-child {
            border-bottom: none;
        }

        .menu-item .menu-img img {
            object-fit: cover;
        }

        .menu-item h3 {
            font-size: 18px;
            font-weight: bold;
        }

        .menu-item p {
            font-size: 14px;
            margin-bottom: 0;
        }
</style>